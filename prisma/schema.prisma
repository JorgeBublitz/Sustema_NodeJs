generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  SECRETARY
  DOCTOR
  NURSE
}

enum Room {
  PS // Pronto Socorro
  SURGERY // Sala de Cirurgia
  UTI // Unidade de Tratamento Intensivo
  WARD // Enfermaria
}

enum Condition {
  SURGERY
  REST
  WAIT
}

enum AppointmentStatus {
  SCHEDULED
  CANCELLED
  FINISHED
}

enum AppointmentType {
  CHECKUP
  SURGERY
  FOLLOW_UP
}

enum Gender {
  MALE
  FEMALE
}

/// Usuários do sistema (genérico, podem ser médico, enfermeiro, secretário ou admin)
model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  passwordHash String /// Senha armazenada como hash (bcrypt, argon2, etc.)
  role         Role     @default(SECRETARY)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  doctor    Doctor?    @relation("UserDoctor")
  nurse     Nurse?     @relation("UserNurse")

  @@index([email])
}

/// Médicos do sistema
model Doctor {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  crmNumber String
  crmState  EstadoBR
  specialty String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user         User          @relation("UserDoctor", fields: [userId], references: [id], onDelete: Cascade)
  appointments Appointment[]

  @@unique([crmNumber, crmState]) // CRM + Estado deve ser único
  @@index([crmNumber])
}

/// Enfermeiros do sistema
model Nurse {
  id          Int      @id @default(autoincrement())
  userId      Int      @unique
  corenNumber String
  corenState  EstadoBR
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user         User          @relation("UserNurse", fields: [userId], references: [id], onDelete: Cascade)
  appointments Appointment[]

  @@unique([corenNumber, corenState])
  @@index([corenNumber])
}

/// Pacientes do sistema
model Patient {
  id        Int       @id @default(autoincrement())
  name      String
  email     String?   @unique
  phone     String?
  gender    Gender
  birthDate DateTime
  condition Condition
  location  Room
  address   String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  appointments Appointment[]
}

/// Consultas / Agendamentos
model Appointment {
  id       Int               @id @default(autoincrement())
  dateTime DateTime
  status   AppointmentStatus @default(SCHEDULED)
  type     AppointmentType   @default(CHECKUP)
  notes    String?

  doctorId  Int
  patientId Int
  nurseId   Int?

  doctor  Doctor  @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  patient Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)
  nurse   Nurse?  @relation(fields: [nurseId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([dateTime])
}

enum EstadoBR {
  AC
  AL
  AP
  AM
  BA
  CE
  DF
  ES
  GO
  MA
  MT
  MS
  MG
  PA
  PB
  PR
  PE
  PI
  RJ
  RN
  RS
  RO
  RR
  SC
  SP
  SE
  TO
}
